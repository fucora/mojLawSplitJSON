{
	"法規性質": "命令",
	"法規名稱": "飼料添加物使用準則",
	"法規網址": "https://law.moj.gov.tw/LawClass/LawOldVer.aspx?PCODE=M0060016&LNNDATE=20010629&LSER=001",
	"法規類別": "農業法規＞畜牧目",
	"異動日期": "20010629",
	"法規內容": [
		{
			"條號": "第 1 條",
			"條文內容": "本準則依飼料管理法第三條之一第二項規定訂定之。"
		},
		{
			"條號": "第 2 條",
			"條文內容": "使用飼料添加物，除法律另有規定外，應依本準則行之。"
		},
		{
			"條號": "第 3 條",
			"條文內容": "列屬飼料添加物詳細品目之貨品，使用時之注意事項、使用對象及用途用\r\n法，規定如附件。"
		},
		{
			"條號": "第 4 條",
			"條文內容": "除前條列屬飼料添加物之品目外，含藥物飼料添加物應依「含藥物飼料添\r\n加物使用規範」使用及管理。"
		},
		{
			"條號": "第 5 條",
			"條文內容": "本準則自發布日施行。"
		}
	]
}